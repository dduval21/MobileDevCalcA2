<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="0.0"
        android:background="#C6C6C6"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="19dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="C"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonSeven"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="7"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonEight"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/buttonSeven"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonNine"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/buttonEight"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="/"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/buttonDivide"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/buttonFour"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/buttonSix"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/buttonFive"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="*"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiply"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/buttonOne"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/buttonTwo"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="-"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/buttonSubtract"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/buttonAdd"
        tools:layout_editor_absoluteY="256dp" />

</androidx.constraintlayout.widget.ConstraintLayout>